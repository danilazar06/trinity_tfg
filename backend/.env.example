# Configuración de la aplicación
NODE_ENV=development
PORT=3000
STAGE=dev

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_REGION=us-east-1

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_ACCOUNT_ID=your-aws-account-id

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=trinity-main

# TMDB API Configuration
TMDB_API_KEY=your-tmdb-api-key
TMDB_BASE_URL=https://api.themoviedb.org/3

# Hugging Face API Configuration (para Salamandra/ALIA)
HF_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# CloudFront Configuration (opcional para desarrollo)
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# CDN Configuration
CDN_BASE_URL=https://image.tmdb.org/t/p/
CLOUDFRONT_DISTRIBUTION=your-cloudfront-distribution-id
IMAGE_OPTIMIZATION_ENABLED=true
CDN_CACHE_TTL=86400

# Cost Optimization Configuration
MONTHLY_BUDGET_LIMIT=50
ALERT_EMAIL=admin@trinity.com
COST_MONITORING_ENABLED=true
AUTO_SCALING_ENABLED=true

# Configuración de timeouts y límites
INACTIVE_MEMBER_TIMEOUT_MINUTES=30
MAX_ROOM_MEMBERS=10
MAX_MASTER_LIST_SIZE=100

# Configuración de Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=30000